{
    "cross_compile": true,

    "host_platform": "linux",
    "host_arch": "i686",

    "target_platform": "openwrt",
    "target_arch": "mipsel",

    "scheme": "release",

    "compiler_set": "gcc",

    "cc": "mipsel-openwrt-linux-uclibc-gcc",
    "cxx": "mipsel-openwrt-linux-uclibc-g++",
    "ar": "mipsel-openwrt-linux-uclibc-ar",
    "ld": "mipsel-openwrt-linux-uclibc-g++",

    "cflags": ["-O3", "-c", "-Wall", "-std=gnu99"],
    "cxxflags": ["-O3", "-c", "-Wall", "-std=gnu++11", "-fexceptions"],
    "arflags": [],
    "ldflags": ["-s", "-pthread", "-std=gnu++11", "-fexceptions"],
    "cmakeflags": ["-DCMAKE_SYSTEM_NAME=Linux", "-DCMAKE_C_COMPILER=mipsel-openwrt-linux-uclbic-gcc", "-DCMAKE_CXX_COMPILER=mipsel-openwrt-linux-uclibc-g++"]
}
