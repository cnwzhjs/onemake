{
    "cross_compile": true,

    "host_platform": "linux",
    "host_arch": "i686",

    "target_platform": "linux",
    "target_arch": "armv7hf",

    "scheme": "debug",

    "compiler_set": "gcc",

    "cc": "arm-linux-gnueabihf-gcc",
    "cxx": "arm-linux-gnueabihf-g++",
    "ar": "arm-linux-gnueabihf-ar",
    "ld": "arm-linux-gnueabihf-g++",

    "cflags": ["-g", "-c", "-Wall", "-std=gnu99", "-mcpu=generic-armv7-a", "-mtune=generic-armv7-a", "-mfpu=neon"],
    "cxxflags": ["-g", "-c", "-Wall", "-std=gnu++11", "-mcpu=generic-armv7-a", "-mtune=generic-armv7-a", "-mfpu=neon"],
    "arflags": [],
    "ldflags": ["-pthread"],
    "cmakeflags": ["-DCMAKE_SYSTEM_NAME=Linux", "-DCMAKE_C_COMPILER=arm-linux-gnueabihf-gcc", "-DCMAKE_CXX_COMPILER=arm-linux-gnueabihf-g++"]
}
