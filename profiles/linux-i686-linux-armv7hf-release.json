{
    "cross_compile": true,

    "host_platform": "linux",
    "host_arch": "i686",

    "target_platform": "linux",
    "target_arch": "armv7hf",

    "scheme": "release",

    "compiler_set": "gcc",

    "cc": "arm-linux-gnueabihf-gcc",
    "cxx": "arm-linux-gnueabihf-g++",
    "ar": "arm-linux-gnueabihf-ar",
    "ld": "arm-linux-gnueabihf-g++",

    "cflags": ["-c", "-Wall", "-std=gnu99", "-march=armv7-a", "-mfpu=vfp", "-mfloat-abi=hard", "-O2"],
    "cxxflags": ["-c", "-Wall", "-std=gnu++11", "-march=armv7-a", "-mfpu=vfp", "-mfloat-abi=hard", "-O2"],
    "arflags": [],
    "ldflags": ["-pthread", "-s"],
    "cmakeflags": ["-DCMAKE_SYSTEM_NAME=Linux", "-DCMAKE_C_COMPILER=arm-linux-gnueabihf-gcc", "-DCMAKE_CXX_COMPILER=arm-linux-gnueabihf-g++"]
}
