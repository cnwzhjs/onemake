{
    "cross_compile": true,

    "host_platform": "linux",
    "host_arch": "x86_64",

    "target_platform": "openwrt",
    "target_arch": "mips",

    "scheme": "release",

    "compiler_set": "gcc",

    "cc": "mips-openwrt-linux-gcc",
    "cxx": "mips-openwrt-linux-g++",
    "ar": "mips-openwrt-linux-ar",
    "ld": "mips-openwrt-linux-g++",

    "cflags": ["-g", "-c", "-Wall", "-std=gnu99"],
    "cxxflags": ["-g", "-c", "-Wall", "-std=gnu++11", "-D_GLIBCXX_USE_C99"],
    "arflags": [],
    "ldflags": ["-std=gnu++11", "-pthread"],
    "cmakeflags": ["-DCMAKE_SYSTEM_NAME=Linux", "-DCMAKE_C_COMPILER=mips-openwrt-linux-gcc", "-DCMAKE_CXX_COMPILER=mips-openwrt-linux-g++"]
}
