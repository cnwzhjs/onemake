{
    "cross_compile": true,

    "host_platform": "linux",
    "host_arch": "x86_64",

    "target_platform": "openwrt",
    "target_arch": "mipsel",

    "compiler_set": "gcc",

    "cc": "mipsel-openwrt-linux-gcc",
    "cxx": "mipsel-openwrt-linux-g++",
    "ar": "mipsel-openwrt-linux-ar",
    "ld": "mipsel-openwrt-linux-g++",

    "cflags": ["-g", "-c", "-Wall", "-std=c99"],
    "cxxflags": ["-g", "-c", "-Wall", "-std=c++11"],
    "arflags": [],
    "ldflags": ["-pthread"],
    "cmakeflags": ["-DCMAKE_SYSTEM_NAME=Linux", "-DCMAKE_C_COMPILER=mipsel-openwrt-linux-gcc", "-DCMAKE_CXX_COMPILER=mipsel-openwrt-linux-g++"]
}
